<h1>All Products</h1>
<% @products.each do |product| %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= link_to product.name, product_path(product)%></span>
          <p><%= product.price %></p>
          <p><%= product.description %> </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
<button class="waves-effect waves-light btn form-btn">Add Product</button>
<%= render(partial: 'form') %>
