<h1><%= @product.name %></h1>
<p>Price: <%= @product.price %></p>
<p>Description: <%= @product.description %></p>

<button class="btn edit-btn">Edit Product</button>
<div class="edit-form">
  <%= form_for @product do |f| %>
    <div class="row">
      <div class= "col s12 m6">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class= "col s12 m6">
        <%= f.label :price %>
        <%= f.text_field :price %>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m6">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="row">
      <div class="col s6 m3">
        <%= f.submit class: "btn" %>
      </div>
      <div class="col s6 m3">
        <%= link_to "Delete", product_path(@product), class: "btn", method: :delete %>
      </div>
    </div>
  <% end %>
</div>
